<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:d="http://xamarin.com/schemas/2014/forms/design"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:model="clr-namespace:MultiplierLibrary.Model"
			 mc:Ignorable="d"
			 x:Class="MultiplierLibrary.View.HomePage">
	<ContentPage.Content>
		<StackLayout x:Name="layout" HorizontalOptions="FillAndExpand" >

			<Label Text="Welcome To Multiplier!"
				VerticalOptions="Start" 
				HorizontalOptions="CenterAndExpand"
				   Margin="0, 20, 15, 5"
				   FontSize="Small"
				   FontFamily="Consolas"
				   x:Name="welcomeLabel"
				   x:FieldModifier="public"
				   />

			<Entry x:Name="UserName" x:FieldModifier="public" Placeholder="Enter Your Username...">

			</Entry>

			<Grid>
				<!-- class id is used as the Properties key so that we don't have to make a new class with a semantic property -->
				<!--OneByOne-->
				<model:LinkedSwitch LinkedPropertyText="OneByOne"
						Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
				</model:LinkedSwitch>
				<Label Grid.Row="0" Grid.Column="1" Text="One By One">
				</Label>
				<!--TwoByOne-->
				<model:LinkedSwitch LinkedPropertyText="TwoByOne"
						Grid.Row="1" Grid.Column="0" HorizontalOptions="Center">
				</model:LinkedSwitch>
				<Label Grid.Row="1" Grid.Column="1" Text="Two By One">
				</Label>
				<!--ThreeByOne-->
				<model:LinkedSwitch LinkedPropertyText="ThreeByOne"
						Grid.Row="2" Grid.Column="0" HorizontalOptions="Center">
				</model:LinkedSwitch>
				<Label Grid.Row="2" Grid.Column="1" Text="Three By One">
				</Label>
				<!--Factored-->
				<model:LinkedSwitch LinkedPropertyText="Factored" 
						Grid.Row="3" Grid.Column="0" HorizontalOptions="Center">
				</model:LinkedSwitch>
				<Label Grid.Row="3" Grid.Column="1" Text="Factors">
				</Label>
			</Grid>


			<Button 
				Text="Start Round!"
				HorizontalOptions="Center"
				Clicked="StartButton_Clicked" Padding="5">
			</Button>

			<Button
				Text = "More Settings"
				Clicked="SettingsButton_Clicked">
			</Button>

		</StackLayout>

	</ContentPage.Content>
</ContentPage>